{
  "manifest_version": 3,
  "name": "OverReleaf Extension",
  "version": "1.0",
  "description": "A Chrome extension for OverReleaf.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://*.overleaf.com/*", "*://overleaf.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.overleaf.com/project/*", "*://overleaf.com/project/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "index.css",
        "popup/*",
        "codemirror-inject.js"
      ],
      "matches": ["*://*.overleaf.com/*", "*://overleaf.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  }
}
